{{> header}}

<!-- Quizzium play -->

<form class="container" method="post" enctype="multipart/form-data" action="/play/game">

    <label class="question">
        <p>{{id}}</p>
        <p>{{question}}</p>
    </label>

    <input type="hidden" name="answer[idQuestion]" value={{id}}>

    <div class="answersContainer">
        <button class="answer" name="option" value="1" >{{opcion1}}</button>
        <button class="answer" name="option" value="2" >{{opcion2}}</button>
        <button class="answer" name="option" value="3" >{{opcion3}}</button>
        <button class="answer" name="option" value="4" >{{opcion4}}</button>
    </div>

</form>

<!-- End Page Content -->
{{> footer}}