{{> header}}
<!-- Quizzium Lobby -->
<div class="container">
    <img src="../public/assets/characters.png" class="characters">
    <div class="buttons-game">
        <a class="button button-big" href="/game/list">Individual</a>
        <a class="button button-big" id="multiplayer">Multijugador</a>
    </div>

    {{#owner}}
        <div class="go-to-ranking">
            <a href="/profile/list" class="profile">
                <div class="description">
                    <img src="../public/profile-pictures/{{foto_perfil}}">
                    <span>{{usuario}}</span>
                </div>
                <div class="position">
                    <span>{{rankingPosition}}</span>
                    <span>Posición</span>
                </div>
            </a>

            <div class="container-anchor">
                <a href="/ranking/list" class="button button-small">Ver Ranking</a>
            </div>
        </div>
    {{/owner}}

    <div style="display: flex; gap: 1rem; justify-content: center; align-items: center">

        <a href="/factory/list" class="button button-small button-orange mt-1" style="display: block">Ir a fábrica de preguntas</a>

        {{#editor}}
            <a href="/report/list" class="button button-small button-orange mt-1" style="display: block">Ir a preguntas
                reportadas</a>
        {{/editor}}

        {{#administrador}}
            <a href="/admin/list" class="button button-small button-orange mt-1" style="display: block">Vista administrador</a>
        {{/administrador}}
    </div>

    <a class="button button-small mt-2 mb-2" href="/lobby/exit">Cerrar sesión</a>

    <div class="container-box">

        <h2 class="titulo-historial">Historial de partidas</h2>

        <div style="display: inline-block">
            <label for="games_quantity">Mostrar:  </label>
        </div>
        <div style="display: inline-block; padding: 0px 10px">
            <select name="games_quantity" id="games_quantity">
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="20">20</option>
            </select>
        </div>
        <div style="display: inline-block">
            <label for="games_quantity"> partidas</label>
        </div>


        <ul class="historial" id="lista-partidas">

        </ul>
        <div>
            <div>
                <label id="paginator"></label>
            </div>
        </div>

        <div id="nav-paginator"></div>
        <button id="openPopup">Abrir Popup</button>

        <!--<div id="popup" style="display: none;">
            <h2>Selecciona una opción:</h2>
            <ul id="optionList">
                <li>Opción 1</li>
                <li>Opción 2</li>
                <li>Opción 3</li>
            </ul>
        </div>-->
    </div>
</div>
<script src='https://code.jquery.com/jquery-3.6.0.min.js'></script>
